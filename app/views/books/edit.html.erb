<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %>
  <%= f.label :body, 'Opinion' %>
  <%= f.text_field :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<p><%= link_to 'Show', book_path(@book) %>|<%= link_to 'Back', books_path %></p>
