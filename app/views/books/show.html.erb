<%= flash[:book_create] %>

<%= render 'books/list', user: @user, book: @book %>

<h1>Book details</h1>
<table>
  <tr>
    <td>
      <% if @user.profile_image == nil %>
        <p>NoImage</p>
      <% else %>
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
        <% end %>
      <% end %>
    </td>
    <td><%= link_to "#{@book1.title}", book_path(@book1) %></td>
    <td><%= @book1.body %></td>
    <td>
      <% if @book1.user_id == current_user.id %>
        <%= link_to 'edit', edit_book_path(@book1) %>
      <% end %>
    </td>
    <td>
      <% if @book1.user_id == current_user.id %>
        <%= link_to 'destroy', book_path(@book1), method: :delete %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><%= link_to "#{@user.name}", user_path(@user) %></td>
  </tr>
</table>