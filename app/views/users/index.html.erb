<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg' %>
<p><%= @user.name %></p>
<p><%= @user.introduction %></p>
<%= link_to 'edit', edit_user_path(@user) %>


<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :body, "Opinion" %>
  <%= f.text_field :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Users</h1>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 300, 300, format: 'jpeg' %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'show', user_path(user) %></td>
    </tr>
  <% end %>
</table>