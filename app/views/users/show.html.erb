<%= flash[:user_update] %>

<%= render 'books/list', user: @user, book: @book %>

<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 300, 300, format: 'jpeg' %></td>
      <td><%= link_to "#{book.title}", book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>