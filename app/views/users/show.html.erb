<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg' %>
<p><%= @user.name %></p>
<p><%= @user.introduction %></p>
<%= link_to 'edit', edit_user_path %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :body, "Opinion" %>
  <%= f.text_field :body %>
  <%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <tr>
    <% @books.each do |book| %>
      <td><%= attachment_image_tag book, :profile_image, :fill, 300, 300, format: 'jpeg' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    <% end %>
  </tr>
</table>